<form id="variable-attribute" class="dialog-content dialog-v2">
  <div class="border-box">
    <div class="box-inner">
      <div class="row large">
        <span>{{localize "dc20rpg.dialog.variable.selectAttribute"}}</span>
        <select class="selectable attribute-selector">
          {{selectOptions this}}
        </select>
      </div>
      <div class="border-box margin-top-5 close-button"> 
        <div class="box-inner no-padding button-wrapper">
          <button class="close rollable" data-selector="attribute-selector">{{localize "dc20rpg.dialog.variable.roll"}}</button>
        </div>
      </div>
    </div>
  </div>
</form>