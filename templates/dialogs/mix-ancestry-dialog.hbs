<form id="mix-ancestry-dialog" class="dialog-v2">
  <div class="title">
    <a class="open-compendium fa-lg fa-solid fa-book-atlas" data-item-type="ancestry" title="{{localize "dc20rpg.sheet.openCompendium"}}"></a>
    <span>{{localize "dc20rpg.dialog.mixAncestry.title"}}</span>
  </div>

  <div class="table-wrapper">
    {{#each ancestryCollection as |ancestry key|}}
    <div class="item-row">
      <img class="item-img" src="{{ancestry.img}}"/>
      <div class="item-name">
        <div>{{ancestry.name}}</div>
        <a class="remove-item fa-solid fa-trash" title="Remove" data-id="{{key}}"></a>
      </div>
    </div>
    {{/each}}
  </div>

  <button {{#unless canMix}}disabled{{/unless}} class="close mix button margin-top-5">{{localize "dc20rpg.dialog.config.finish"}}</button>
</form>