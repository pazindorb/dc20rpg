<form id="actor-browser" class="dialog-v2">
  {{#if collectingData}}<div class="collecting-data-overlay"><span>{{localize "dc20rpg.dialog.compendiumBrowser.collectingData"}}</span></div>{{/if}}
  <div class="title margin-top-5">
    <span>{{localize "dc20rpg.dialog.compendiumBrowser.title"}}</span>
  </div>

  <div class="wrapper">
    {{!-- Filters --}}
    <div class="filters">
      <div class="row">
        <span class="row-title">{{localize 'dc20rpg.dialog.compendiumBrowser.actorName'}}</span>
        <input class="input" type="text" value="{{filters.name.value}}" data-path="filters.name.value"/>
      </div>

      {{!-- Compendium Source --}}
      <div class="row margin-top-10 ignore-symetry">
        <span class="row-title">{{localize 'dc20rpg.dialog.compendiumBrowser.compendiumType'}}</span>
        <div class="multi-select-wrapper">
          <div class="multi-select margin-top-2">
            <span class="margin-left-5 margin-right-5">{{localize 'dc20rpg.dialog.compendiumBrowser.systemCompendium'}}</span>
            <a class="margin-left-5 margin-right-5 fa-lg activable {{#if filters.compendium.value.system}}fa-solid fa-square-check{{else}}fa-regular fa-square{{/if}}" data-path="filters.compendium.value.system"></a>
          </div>
          <div class="multi-select margin-top-2">
            <span class="margin-left-5 margin-right-5">{{localize 'dc20rpg.dialog.compendiumBrowser.worldCompendium'}}</span>
            <a class="margin-left-5 margin-right-5 fa-lg activable {{#if filters.compendium.value.world}}fa-solid fa-square-check{{else}}fa-regular fa-square{{/if}}" data-path="filters.compendium.value.world"></a>
          </div>
          <div class="multi-select margin-top-2">
            <span class="margin-left-5 margin-right-5">{{localize 'dc20rpg.dialog.compendiumBrowser.moduleCompendium'}}</span>
            <a class="margin-left-5 margin-right-5 fa-lg activable {{#if filters.compendium.value.module}}fa-solid fa-square-check{{else}}fa-regular fa-square{{/if}}" data-path="filters.compendium.value.module"></a>
          </div>
        </div>
      </div>

      {{!-- Level --}}
      <div class="row margin-top-10">
        <span class="row-title">{{localize 'dc20rpg.dialog.compendiumBrowser.level'}}</span>
        <div class="from-to-wrapper">
          <input class="numeric-input" type="number" value="{{filters.levelFrom.value}}" data-path="filters.levelFrom.value"/>
          <i class="fa-lg fa-solid fa-left-right margin-left-5 margin-right-5"></i>
          <input class="numeric-input" type="number" value="{{filters.levelTo.value}}" data-path="filters.levelTo.value"/>
        </div>
      </div>

      {{!-- Actor Type --}}
      <div class="row margin-top-10 ignore-symetry">
        <span class="row-title">{{localize 'dc20rpg.dialog.compendiumBrowser.actorType'}}</span>
        <div class="multi-select-wrapper">
          <div class="multi-select margin-top-2">
            <span class="margin-left-5 margin-right-5">{{localize 'dc20rpg.dialog.compendiumBrowser.character'}}</span>
            <a class="margin-left-5 margin-right-5 fa-lg activable {{#if filters.type.value.character}}fa-solid fa-square-check{{else}}fa-regular fa-square{{/if}}" data-path="filters.type.value.character"></a>
          </div>
          <div class="multi-select margin-top-2">
            <span class="margin-left-5 margin-right-5">{{localize 'dc20rpg.dialog.compendiumBrowser.npc'}}</span>
            <a class="margin-left-5 margin-right-5 fa-lg activable {{#if filters.type.value.npc}}fa-solid fa-square-check{{else}}fa-regular fa-square{{/if}}" data-path="filters.type.value.npc"></a>
          </div>
          <div class="multi-select margin-top-2">
            <span class="margin-left-5 margin-right-5">{{localize 'dc20rpg.dialog.compendiumBrowser.companion'}}</span>
            <a class="margin-left-5 margin-right-5 fa-lg activable {{#if filters.type.value.companion}}fa-solid fa-square-check{{else}}fa-regular fa-square{{/if}}" data-path="filters.type.value.companion"></a>
          </div>
        </div>
      </div>

      {{!-- Category --}}
      <div class="row margin-top-10">
        <span class="row-title">{{localize 'dc20rpg.dialog.compendiumBrowser.category'}}</span>
        <input class="input" type="text" value="{{filters.category.value}}" data-path="filters.category.value"/>
      </div>

      {{!-- Creature Type --}}
      <div class="row margin-top-10">
        <span class="row-title">{{localize 'dc20rpg.dialog.compendiumBrowser.creatureType'}}</span>
        <input class="input" type="text" value="{{filters.creatureType.value}}" data-path="filters.creatureType.value"/>
      </div>
    </div>

    {{!-- Actor Picker --}}
    <div class="actor-picker">
      {{#each collectedActors as |actor index|}}
      <div class="actor-row show-actor" data-uuid="{{actor.uuid}}" data-index="{{index}}", data-type="{{actor.type}}" title="{{localize 'dc20rpg.dialog.compendiumBrowser.showActor'}}">
        <img class="actor-img" src="{{actor.img}}"/>
        <div class="actor-name">{{actor.name}}</div>
        <div class="actor-level" title="{{localize "dc20rpg.sheet.level"}}">[Lvl {{actor.system.details.level}}]</div>
        <a class="add-actor fa-2x fa-solid fa-file-arrow-up" title="{{localize 'dc20rpg.dialog.compendiumBrowser.importActor'}}" data-index="{{index}}"></a>
      </div>
      {{/each}}
    </div>
  </div>

</form>