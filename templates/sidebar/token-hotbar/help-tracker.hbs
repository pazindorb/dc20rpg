<div id="help-tracker" class="grid grid-{{help.rowSize}}col">
  {{#each help.dice as |dice key|}}
    <div class="help-dice {{#if dice.subtraction}}subtraction{{/if}}" data-key="{{key}}" data-type="help" data-tooltip="{{dice.tooltip}}">
      <i class="fa-solid {{dice.icon}} fa-lg"></i>
    </div>
  {{/each}}
</div>