      "u58YGpziQjvt8ZLS": {
        "command": "const trigger = await DC20.dialog.SimplePopup.select(\"Triggering Damage Type\", CONFIG.DC20RPG.DROPDOWN_DATA.elementalDamageTypes);\nif (!trigger) return;\n\nconst success = item.getEffectByKey(\"absorbElements\");\nif (success) success.changes[0].key = `system.damageReduction.damageTypes.${trigger}.resist`;\n\nconst lingering = item.getEffectByKey(\"lingeringRetaliation\");\nif (lingering) lingering.system.macro = lingering.system.macro.replace('const dmgType = \"fire\"; // REPLACE', `const dmgType = \"${trigger}\";`)",
        "trigger": "preItemRoll",
        "disabled": false,
        "name": "Update damage type",
        "title": "",
        "global": false
      },
      "o8aT17QHT4JLgVv8": {
        "command": "const trigger = await DC20.dialog.SimplePopup.select(\"Triggering Damage Type\", CONFIG.DC20RPG.DROPDOWN_DATA.elementalDamageTypes);\nif (!trigger) return;\n\nfor (const token of game.user.targets) {\n  const actor = token.actor;\n  if (!actor) continue;\n  let dmg = {\n    value: 2,\n    source: \"Flow of Nature\",\n    type: trigger\n  }\n  const calculationTarget = {\n    system: {damageReduction: actor.system.damageReduction}\n  }\n  dmg = game.dc20rpg.tools.calculateForTarget(calculationTarget, {clear: {...dmg}, modified: {...dmg}}, {isDamage: true})\n  game.dc20rpg.tools.applyDamage(actor, dmg.modified, {fromEvent: true});\n}",
        "trigger": "onDemand",
        "disabled": false,
        "name": "Apply Flow of Nature",
        "title": "Apply Flow of Nature",
        "global": false
      }
