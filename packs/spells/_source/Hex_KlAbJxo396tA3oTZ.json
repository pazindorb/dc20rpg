    "macros": {
      "o7QQpTDTdjrDM3IP": {
        "command": "const effect = item.getEffectByKey(\"hex\");\nif (!effect) return;\n\nconst EXPANDED = \"xA5WgSNCDW5qZuAU\";\nconst BREAK_RESISTANCE = \"QuSGYPyc7Eu4Veim\";\nconst IMPROVED = \"j96AmO1RKb1DZE2i\";\n\nconst enhancements = item.enhancements.active;\n\nlet value = 1;\nlet options = {\n  ...CONFIG.DC20RPG.DROPDOWN_DATA.physicalDamageTypes,\n  ...CONFIG.DC20RPG.DROPDOWN_DATA.elementalDamageTypes,\n  ...CONFIG.DC20RPG.DROPDOWN_DATA.mysticalDamageTypes\n}\nlet dmgTypes = [];\nif (enhancements.get(EXPANDED)) {\n  options = {\n    physical: \"Physical\",\n    elemental: \"Elemental\",\n    mystical: \"Mystical\"\n  }\n}\nif (enhancements.get(IMPROVED)) {\n  value += enhancements.get(IMPROVED).number;\n}\nconst selected = await DC20.dialog.SimplePopup.select(\"Select Damage Type\", options);\nif (!selected) return;\n\nswitch(selected) {\n  case \"physical\":\n    dmgTypes = Object.keys(CONFIG.DC20RPG.DROPDOWN_DATA.physicalDamageTypes);\n    break;\n  case \"elemental\":\n    dmgTypes = Object.keys(CONFIG.DC20RPG.DROPDOWN_DATA.elementalDamageTypes);\n    break;\n  case \"mystical\":\n    dmgTypes = Object.keys(CONFIG.DC20RPG.DROPDOWN_DATA.mysticalDamageTypes);\n    break;\n  default:\n    dmgTypes = [selected];\n}\n\n// Add Vulnerability to the effect\nfor (const dmgType of dmgTypes) {\n  effect.changes.push({\n    key: `system.damageReduction.damageTypes.${dmgType}.vulnerable`,\n    mode: 2,\n    value: value\n  })\n}\n\n// Add Resistance removal to the effect\nif (enhancements.get(BREAK_RESISTANCE)) {\n  for (const dmgType of dmgTypes) {\n    effect.changes.push({\n      key: `system.damageReduction.damageTypes.${dmgType}.resistance`,\n      mode: 5,\n      value: false\n    })\n    effect.changes.push({\n      key: `system.damageReduction.damageTypes.${dmgType}.resist`,\n      mode: 5,\n      value: 0\n    })\n  }\n}",
