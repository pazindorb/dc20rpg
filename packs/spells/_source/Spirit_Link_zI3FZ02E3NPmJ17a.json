        "macro": "let transference = effect.flags.dc20rpg?.transference;\nconst profane = effect.flags.dc20rpg?.profane;\nconst range = 10 + (effect.flags.dc20rpg?.extend || 0);\n\nif (event.trigger === \"instant\") {\n  const tokens = await DC20.dialog.TokenSelector.open(canvas.tokens.placeables, \"Select Actor you want to link with. Make sure he failed the save as well.\");\n  const linkedActor = tokens[0]?.actor;\n  if (!linkedActor) {\n    ui.notifications.error(\"Actor not found.\")\n    return;\n  }\n\n  if (transference) {\n    const confirmed = await DC20.dialog.SimplePopup.open(\"confirm\", {confirmLabel: actor.name, denyLabel: linkedActor.name, message: \"Which actor should be the target of Transference?\"});\n    transference = confirmed ? actor.id : linkedActor.id;\n  }\n\n  // Prepare second Spirit Link data\n  const linkData = effect.toObject(false);\n  const changes = [];\n  for (const change of linkData.changes) {\n    if (change.value.includes('\"trigger\": \"instant\"')) continue;\n    changes.push(change);\n  }\n  linkData.changes.pop();\n  linkData.changes = changes;\n  linkData.flags.dc20rpg.targetHash = actor.targetHash;\n  if (transference) linkData.flags.dc20rpg.transference = transference;\n  linkedActor.applyEffect(linkData);\n\n  // Update original Spirit Link\n  effect.gmUpdate({[\"flags.dc20rpg.targetHash\"]: linkedActor.targetHash});\n  if (transference) effect.gmUpdate({[\"flags.dc20rpg.transference\"]: transference});\n  return;\n}\n\n// Get Linked Actor\nconst targetHash = effect.flags.dc20rpg?.targetHash;\nconst linked = DC20.tools.getActorFromTargetHash(targetHash);\nif (!linked) {\n  ui.notifications.error(\"Linked Actor not found.\")\n  return;\n}\n// Check range\nconst actorToken = actor.getActiveTokens()[0]\nconst linkedToken = linked.getActiveTokens()[0]\nif (!actorToken || !linkedToken) return;\nif (!actorToken.isTokenInRange(linkedToken, range)) return;\n\nif (event.trigger === \"damageTaken\") {\n  extras.preventChange = true;\n  const amount = extras.amount;\n  const dmg = {value: 0, source: \"Spirit Link\"};\n\n  if (transference) {\n    dmg.value = amount;\n    if (transference === actor.id) game.dc20rpg.tools.applyDamage(actor, dmg, {skipEventCall: true, messageId: extras.messageId});\n    if (transference === linked.id) game.dc20rpg.tools.applyDamage(linked, dmg, {skipEventCall: true, messageId: extras.messageId});\n    return;\n  }\n\n  dmg.value = profane ? amount : Math.ceil(amount/2);\n  game.dc20rpg.tools.applyDamage(actor, dmg, {skipEventCall: true, messageId: extras.messageId});\n  game.dc20rpg.tools.applyDamage(linked, dmg, {skipEventCall: true, messageId: extras.messageId});\n}\n\nif (event.trigger === \"healingTaken\") {\n  extras.preventChange = true;\n  const amount = extras.amount;\n  const heal = {value: 0, type: \"heal\", source: \"Spirit Link\"};\n  \n  if (transference) {\n    heal.value = amount;\n    if (transference === actor.id) game.dc20rpg.tools.applyHealing(actor, heal, {skipEventCall: true, messageId: extras.messageId});\n    if (transference === linked.id) game.dc20rpg.tools.applyHealing(linked, heal, {skipEventCall: true, messageId: extras.messageId});\n    return;\n  }\n\n  heal.value = Math.ceil(amount/2);\n  game.dc20rpg.tools.applyHealing(actor, heal, {skipEventCall: true, messageId: extras.messageId});\n  game.dc20rpg.tools.applyHealing(linked, heal, {skipEventCall: true, messageId: extras.messageId});\n}",
