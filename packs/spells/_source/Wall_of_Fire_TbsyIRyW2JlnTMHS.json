        "macro": "const burning = effect.flags.dc20rpg?.burning || 0;\nconst dmgValue = effect.flags.dc20rpg?.damageValue || 1;\n\n// We dont want to call it too fast as some tokens might be inside that template at the time we place it.\nconst skipTime = 5000 // 5 sec\nconst templateCallTime = effect.flags.dc20rpg?.templateCallTime || 0;\nconst effectCreationTime = effect._stats.createdTime\nif (event.trigger === \"instant\" && effectCreationTime - templateCallTime < skipTime) return;\n\n// When a creature enters the area for the first time on its TURN\nif (event.trigger === \"instant\" && !actor.myTurnActive) return;\n\nconst details = DC20.DC20Roll.prepareSaveDetails(\"mig\", {against: event.against, rollTitle: event.label});\nconst roll = await DC20.dialog.RollDialog.open(actor, details, {sendToActorOwners: true});\nif (roll && (roll._total < event.against)) {\n  let dmg = {\n    value: dmgValue,\n    source: \"Wall of Fire\",\n    type: \"fire\"\n  }\n  const calculationTarget = {\n    system: {damageReduction: actor.system.damageReduction}\n  }\n  dmg = game.dc20rpg.tools.calculateForTarget(calculationTarget, {clear: {...dmg}, modified: {...dmg}}, {isDamage: true})\n  game.dc20rpg.tools.applyDamage(actor, dmg.modified, {fromEvent: true});\n\n  // Apply Burning condition\n  if (burning) {\n    const data = {...CONFIG.statusEffects.find(e => e.id === \"burning\")};\n    data.duration = {rounds: 1};\n    data.changes = [\n      {\n        key: \"system.events\",\n        mode: 2,\n        value: `\"eventType\": \"damage\", \"label\": \"Burning\", \"trigger\": \"turnStart\", \"value\": ${burning}, \"type\": \"fire\"`\n      },\n      {\n        key: \"system.events\",\n        mode: 2,\n        value: `\"eventType\": \"saveRequest\", \"trigger\": \"turnEnd\", \"label\": \"Burning - Repeated Save\", \"checkKey\": \"phy\", \"against\": \"${event.against}\", \"statuses\": [\"burning\"],\"onSuccess\": \"delete\"`\n      }\n    ]\n    data.system.statusId = \"\";\n    game.dc20rpg.effects.createEffectOn(data, actor);\n  }\n}",
