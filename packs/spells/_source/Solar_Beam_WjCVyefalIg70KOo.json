        "effectKey": "solarBeamCharges",
        "macro": "if (event.trigger === \"instant\") {\n  effect.update({[\"flags.dc20rpg.solarBeam\"]: 1})\n}\n\nif (event.trigger === \"turnStart\") {\n  const confirmed = await DC20.dialog.SimplePopup.confirm(\"Did you sustained Solar Beam?\");\n  if (!confirmed) return;\n  \n  const current = effect.flags.dc20rpg.solarBeam;\n  const newValue = Math.min(current + 1, 4)\n  effect.update({\n    [\"flags.dc20rpg.solarBeam\"]: newValue,\n    [\"name\"]: `Solar Beam - Charges (${newValue})`\n  })\n}\n\nif (event.trigger === \"effectRemoved\") {\n  const item = actor.getItemByKey(\"solarBeam\");\n  if (!item) {\n    ui.notifications.notify(\"Cannot roll 'Solar Beam' - item not found.\");\n    return;\n  }\n  \n  const burning = effect.flags.dc20rpg?.burning || 0;\n  const blinded = effect.flags.dc20rpg?.blinded;\n  const bonusDmg = effect.flags.dc20rpg.bonusDmg || 0;\n  const stacks = effect.flags.dc20rpg.solarBeam || 1;\n  const dmg = stacks + bonusDmg;\n\n  let solarBurning;\n  let solarBlinded;\n  if (burning) solarBurning = item.getEffectByKey(\"solarBurning\");\n  if (blinded) solarBlinded = item.getEffectByKey(\"solarBlinded\");\n\n  // Configure effects\n  if (solarBurning) {\n    solarBurning.changes[0].value = `\"eventType\": \"damage\", \"trigger\": \"turnStart\", \"label\": \"Burning\", \"value\": ${burning}, \"type\": \"radiant\", \"actorId\": \"#SPEAKER_ID#\"`\n    await solarBurning.update({\n      [\"changes\"]: solarBurning.changes,\n      [\"system.addToChat\"]: true\n    })\n  }\n  if (solarBlinded) await solarBlinded.update({ [\"system.addToChat\"]: true });\n\n  // Configure item\n  const updateData = {\n    system: {\n      actionType: \"attack\",\n      rollMenu: {free: true},\n      againstStatuses: {},\n      macros: {vdGDq9scIlVqB59Q: {disabled: true}},\n      enhancements: {\n        RjqowOso2aPpysFs: {hide: true},\n        CgvMe3EbcCWRnSQe: {hide: true},\n        fsh3GvJweaTM2Ltm: {hide: true},\n        [\"0HfaxypAIW3JO5sp\"]: {hide: true},\n      }\n    }\n  }\n  \n  // Dmg Formula\n  const formula = new DC20.Formula();\n  formula.formula = `${dmg}`;\n  formula.type = \"radiant\";\n  updateData.system.formulas = {solarBeam: formula};\n  \n  // Roll Request\n  if (solarBurning || solarBlinded) {\n    const request = new DC20.RollRequest();\n    request.saveKey = \"phy\";\n    updateData.system.rollRequests = {solarBeam: request}\n  }\n\n  // Against statuses\n  if (solarBurning) {\n    const stataus = new DC20.AgainstStatus();\n    stataus.id = \"burning\";\n    stataus.supressFromChatMessage = true;\n    updateData.system.againstStatuses.solarBurning = stataus;\n  }\n  if (solarBlinded) {\n    const stataus = new DC20.AgainstStatus();\n    stataus.id = \"blinded\";\n    stataus.supressFromChatMessage = true;\n    updateData.system.againstStatuses.solarBlinded = stataus;\n  }\n\n  await item.update(updateData)\n  const options = stacks === 4 ? {initialRollMenuValue: {adv: 1, dis: 0}} : {};\n  await item.roll(options);\n\n  // Cleanup\n  await item.update({\n    [\"system.actionType\"]: \"\",\n    [\"system.formulas.-=solarBeam\"]: null,\n    [\"system.rollRequests.-=solarBeam\"]: null,\n    [\"system.againstStatuses.-=solarBurning\"]: null,\n    [\"system.againstStatuses.-=solarBlinded\"]: null,\n    [\"system.macros.vdGDq9scIlVqB59Q.disabled\"]: false,\n    [\"system.enhancements.RjqowOso2aPpysFs.hide\"]: false,\n    [\"system.enhancements.CgvMe3EbcCWRnSQe.hide\"]: false,\n    [\"system.enhancements.fsh3GvJweaTM2Ltm.hide\"]: false,\n    [\"system.enhancements.0HfaxypAIW3JO5sp.hide\"]: false,\n  });\n  if (solarBurning) await solarBurning.update({ [\"system.addToChat\"]: false });\n  if (solarBlinded) await solarBlinded.update({ [\"system.addToChat\"]: false });\n}",
