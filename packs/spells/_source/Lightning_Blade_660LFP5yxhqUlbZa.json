        "name": "enhancementReset",
        "trigger": "enhancementReset",
        "command": "if (enhKey === \"VEjTHUY31xjzXKd5\") {\n  item.update({\n    [\"system.toggle.toggledOn\"]: false,\n    [\"system.copyEnhancements.copy\"]: false,\n    [\"system.copyEnhancements.copyFor\"]: `name=[\"WEAPON NAME\"]`,\n    [\"system.enhancements.iHLwUknlvTToMOzw.hide\"]: false,\n    [\"system.enhancements.bxlCrndZCQcUvbjH.hide\"]: false,\n    [\"system.enhancements.VEjTHUY31xjzXKd5.hide\"]: true\n  })\n}",
        "disabled": false,
        "title": ""
      },
      "gOOrIz3Kp3maUHfI": {
        "name": "postItemRoll",
        "trigger": "postItemRoll",
        "command": "const weapons = actor.getAllItemsWithType([\"weapon\"]);\nconst selectOptions = game.dc20rpg.tools.toSelectOptions(weapons, \"id\", \"name\");\nconst weaponId = await game.dc20rpg.tools.getSimplePopup(\"select\", {header: \"Select Weapon\", selectOptions: selectOptions});\nconst weapon = actor.items.get(weaponId);\nif (weapon) {\n  const dmgEnh = item.system.enhancements.iHLwUknlvTToMOzw;\n  const dmgValue = 2 + (2 *dmgEnh.number);\n\n  const effectData = item.system.enhancements.VEjTHUY31xjzXKd5.modifications.addsEffect;\n  const value = effectData.changes[0].value;\n  const newValue = value.replace(/(\"value\":\\s*)[^,]+/g, `$1\"${dmgValue}\"`);\n  effectData.changes[0].value = newValue\n\n\n  item.update({\n    [\"system.toggle.toggledOn\"]: true,\n    [\"system.copyEnhancements.copy\"]: true,\n    [\"system.copyEnhancements.copyFor\"]: `name=[\"${weapon.name}\"]`,\n    [\"system.enhancements.iHLwUknlvTToMOzw.hide\"]: true,\n    [\"system.enhancements.bxlCrndZCQcUvbjH.hide\"]: true,\n    [\"system.enhancements.VEjTHUY31xjzXKd5.hide\"]: false,\n    [\"system.enhancements.VEjTHUY31xjzXKd5.modifications.addsEffect.changes\"]: effectData.changes,\n    [\"system.enhancements.VEjTHUY31xjzXKd5.modifications.addsEffect.description\"]: `<p>You will take ${dmgValue} Lightning damage if you move.</p>`,\n  })\n}",
        "disabled": false,
        "title": ""
      }
