        "effectKey": "deathWard",
        "macro": "if (event.trigger === \"instant\") {\n  const message = game.messages.get(effect.system.chatMessageId);\n  if (!message) return;\n\n  const tempHPValue = message.system.chatFormattedRolls.other[0]._total;\n  effect.update({[\"flags.dc20rpg.tempHPValue\"]: tempHPValue});\n\n  const deathWard = effect.flags.dc20rpg.deathWard;\n  if (deathWard) {\n    const stacks = deathWard * 2;\n    for (let i = 0; i < stacks; i++) {\n      await actor.toggleStatusEffect(\"doomed\", {active: false});\n    }\n  }\n}\n\nif (event.trigger === \"damageTaken\") {\n  const health = actor.resources.health;\n  const amount = extras.amount;\n  if (health.value - amount > 0) return;\n  extras.preventChange = true;\n  effect.delete();\n\n  const tempHPValue = effect.flags.dc20rpg.tempHPValue;\n  DC20.dialog.SimplePopup.info(\"Death Ward - Triggered\", [`Death Ward was triggered. Granted ${tempHPValue} Temp HP before taking the damage.`], {actor: actor});\n  const tempHPLeft = tempHPValue - amount;\n  \n  if (tempHPLeft < 0) {\n    await actor.update({[\"system.resources.health.current\"]: health.current + tempHPLeft})\n  }\n  else {\n    await actor.update({[\"system.resources.health.temp\"]: tempHPLeft})\n  }\n}",
