    "macros": {
      "NAW3UGqsTQuVHlOD": {
        "command": "const enhancements = item.system.enhancements;\nconst damage = enhancements[\"M3kqvvdUP8iOx4PG\"];\nconst illuminating = enhancements[\"YbloHZiXtY6KLTaD\"];\nconst guiding = enhancements[\"DGBpMC90MFNKfzP2\"];\n\nconst dmgFormula = new DC20.Formula();\ndmgFormula.formula = `${1 + damage.number}`;\ndmgFormula.type = \"radiant\";\n\nconst radiantImbued = new DC20.Enhancement();\nradiantImbued.name = \"Radiant Imbued\";\nradiantImbued.modifications.formula = dmgFormula;\nradiantImbued.modifications.addsNewFormula = true;\nradiantImbued.description = `You deal ${1 + damage.number} Radiant damage on Martial Attacks`;\n\nconst newEnhancements = {\n  [\"-=M3kqvvdUP8iOx4PG\"]: null,\n  [\"-=DTrQ4xeKIgCAiWNE\"]: null,\n  [\"-=YbloHZiXtY6KLTaD\"]: null,\n  [\"-=DGBpMC90MFNKfzP2\"]: null,\n  radiantImbued: radiantImbued\n}\nif (illuminating.number > 0) {\n  const blueprint = foundry.utils.deepClone(illuminating);\n  blueprint.name = \"Radiant Imbued - Illuminating Strikes\";\n  blueprint.resources.mana = null;\n  blueprint.number = 0;\n  newEnhancements.illuminating = blueprint;\n}\nif (guiding.number > 0) {\n  const blueprint = foundry.utils.deepClone(guiding);\n  blueprint.name = \"Radiant Imbued - Guiding Strikes\";\n  blueprint.resources.mana = null;\n  blueprint.number = 0;\n  newEnhancements.guiding = blueprint;\n}\n\nitem.update({\n  [\"flags.dc20rpg.enhancements\"]: enhancements,\n  [\"system.copyEnhancements.copy\"]: true,\n  [\"system.enhancements\"]: newEnhancements\n})",
        "trigger": "postChatMessageCreated",
        "disabled": false,
        "name": "Prepare Item after roll",
        "title": "",
        "global": false
      },
      "e6IkO37w32WuITI6": {
        "command": "if (!off) return;\n\nconst oldEnhancements = item.flags.dc20rpg.enhancements;\nif (!oldEnhancements) return;\nfor (const enh of Object.values(oldEnhancements)) {\n  enh.number = 0;\n}\n\noldEnhancements[\"-=radiantImbued\"] = null;\noldEnhancements[\"-=illuminating\"] = null;\noldEnhancements[\"-=guiding\"] = null;\nitem.update({\n  [\"flags.dc20rpg.-=enhancements\"]: null,\n  [\"system.copyEnhancements.copy\"]: false,\n  [\"system.enhancements\"]: oldEnhancements\n})",
