        {
            "_id": "4055636d8ecb59c9",
            "_key": "!journal.pages!7374b83f0432972a.4055636d8ecb59c9",
            "_stats": {
                "compodiumSource": null,
                "coreVersion": "12.327",
                "createdTime": 1721459260.734043,
