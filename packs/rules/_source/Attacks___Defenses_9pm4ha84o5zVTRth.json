    {
      "_id": "73916be9f73e747b",
      "name": "Attack Ranges",
      "ownership": {
        "default": -1
      },
      "sort": 5,
      "text": {
        "content": "<p id=\"1cf1b90a-e081-8176-9d41-ee841f069e98\">There are 2 types of Attack Ranges: <strong>Melee</strong> and <strong>Ranged</strong>.</p>",
        "format": 1
      },
      "title": {
        "level": 2,
        "show": true
      },
      "type": "text",
      "system": {},
      "image": {},
      "video": {
