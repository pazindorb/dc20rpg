    {
      "_id": "be0001e9db3cf9cc",
      "name": "Starting Attributes",
      "ownership": {
        "default": -1
      },
      "sort": 6,
      "text": {
        "content": "<p id=\"1cf1b90a-e081-8114-b400-d6a3edff1e30\">You get your PC Attributes from one of the following methods\n\t\t\t\tand then assign the values to each of the 4 Attributes. </p>",
        "format": 1
      },
      "title": {
        "level": 2,
        "show": true
      },
      "type": "text",
      "system": {},
      "image": {},
      "video": {
        "controls": true,
        "volume": 0.5
      },
      "src": null,
      "flags": {},
      "_stats": {
        "compendiumSource": null,
        "duplicateSource": null,
        "coreVersion": "13.344",
        "systemId": "dc20rpg",
        "systemVersion": "0.9.0",
