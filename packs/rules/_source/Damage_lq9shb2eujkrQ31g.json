    {
      "_id": "40f93e81a4f79a82",
      "name": "Damage Resistance X & Vulnerability  X",
      "sort": 15,
      "text": {
        "content": "<p id=\"2be1b90a-e081-8028-b8f5-c980ea5be0d9\">A creature that gains Damage Resistance X or Damage Vulnerability X from multiple sources they are all added together.</p>",
        "format": 1
      },
      "title": {
        "level": 3,
        "show": true
      },
      "type": "text",
      "system": {},
      "image": {},
      "video": {
        "controls": true,
