    {
      "_id": "73916be9f73e747b",
      "name": "Attack Ranges",
      "sort": 5,
      "text": {
        "content": "<p id=\"2be1b90a-e081-8037-8f83-e3daad82487a\">Attacks have 3 types of ranges: Melee, Ranged, or Area.</p>",
        "format": 1
      },
      "title": {
        "level": 2,
        "show": true
      },
      "type": "text",
      "system": {},
      "image": {},
      "video": {
