    {
      "_id": "3b4db257b1613288",
      "name": "Attack Types",
      "sort": 2,
      "text": {
        "content": "<p id=\"2be1b90a-e081-80b2-b36c-f461f6e9f188\">There are 2 types of Attacks: Martial and Spell.</p>",
        "format": 1
      },
      "title": {
        "level": 2,
        "show": true
      },
      "type": "text",
      "system": {},
      "image": {},
      "video": {
