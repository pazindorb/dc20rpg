      "uOYP4gvcJpumln1h": {
        "name": "Change Pact Weapon",
        "trigger": "onDemand",
        "command": "const weapons = actor.getAllItemsWithType([\"weapon\"]);\nconst selectOptions = game.dc20rpg.tools.toSelectOptions(weapons, \"id\", \"name\");\nconst weaponId = await game.dc20rpg.tools.getSimplePopup(\"select\", {header: \"Select Your Pact Weapon\", selectOptions: selectOptions});\nconst weapon = actor.items.get(weaponId);\nif (weapon) {\n  // Remove combat training from old Pact Weapon\n  const oldWeapon = actor.items.get(item.flags.dc20rpg.pactWeaponId);\n  if (oldWeapon) oldWeapon.update({[\"system.weaponStyleActive\"]: false});\n\n  // Add combat training to new Pact Weapon\n  weapon.update({[\"system.weaponStyleActive\"]: true});\n  item.update({[\"flags.dc20rpg.pactWeaponId\"]: weaponId});\n}",
        "disabled": false,
        "title": "Change Pact Weapon"
      },
