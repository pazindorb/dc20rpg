      "onDemand": "const damageTypes = {\n  ...CONFIG.DC20RPG.DROPDOWN_DATA.elementalDamageTypes,\n  ...CONFIG.DC20RPG.DROPDOWN_DATA.mysticalDamageTypes\n}\n\n// 1. Select Weapon\nconst weapons = actor.getWeapons();\nconst weaponId = await game.dc20rpg.tools.getSimplePopup(\"select\", {header: \"Select your Bounded Weapon\", selectOptions: weapons});\nconst weapon = actor.items.get(weaponId);\nif (weapon) {\n  // 2. Select Damage Type\n  const selected = await game.dc20rpg.tools.getSimplePopup(\"select\", {header: \"Select your Bounded damage type\", selectOptions: damageTypes});\n  if (selected) {\n    item.update({\n      [\"system.copyEnhancements.copyFor\"]: `_id=\"${weaponId}\"`,\n      [\"system.enhancements.tXOWadltDwewJwss.modifications.formula.type\"]: selected,\n    });\n  }\n}",
