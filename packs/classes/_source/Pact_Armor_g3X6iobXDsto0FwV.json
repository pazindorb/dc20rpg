    "macros": {
      "onDemandMacroTitle": "Change Your Pact Armor",
      "onDemand": "const armors = {};\nactor.items.forEach(item => {\n  if (item.type === \"equipment\" && [\"light\", \"heavy\"].includes(item.system.equipmentType)) armors[item.id] = item.name;\n});\nconst armorId = await game.dc20rpg.tools.getSimplePopup(\"select\", {header: \"Select Your Pact Armor\", selectOptions: armors});\nconst armor = actor.items.get(armorId);\nif (armor) {\n  const code = `; const pact = actor.items.get(\"${item._id}\"); if (pact) {pact.update({['system.toggle.toggledOn']: on})}`;\n\n  // Remove macro from old Pact Armor\n  const oldArmor = actor.items.get(item.flags.dc20rpg.pactArmorId);\n  if (oldArmor) {\n    let macroToUpdate =  oldArmor.system.macros.onItemToggle;\n    macroToUpdate = macroToUpdate.replace(code, \"\");\n    oldArmor.update({[\"system.macros.onItemToggle\"]: macroToUpdate});\n  }\n\n  // Add macro to new Pact Armor\n  const onItemToggle = armor.system.macros.onItemToggle;\n  armor.update({[\"system.macros.onItemToggle\"]: onItemToggle + code})\n  item.update({[\"flags.dc20rpg.pactArmorId\"]: armorId});\n}",
      "onCreate": "const armors = {};\nactor.items.forEach(item => {\n  if (item.type === \"equipment\" && [\"light\", \"heavy\"].includes(item.system.equipmentType)) armors[item.id] = item.name;\n});\nconst armorId = await game.dc20rpg.tools.getSimplePopup(\"select\", {header: \"Select Your Pact Armor\", selectOptions: armors});\nconst armor = actor.items.get(armorId);\nif (armor) {\n  const code = `; const pact = actor.items.get(\"${item._id}\"); if (pact) {pact.update({['system.toggle.toggledOn']: on})}`;\n\n  // Remove macro from old Pact Armor\n  const oldArmor = actor.items.get(item.flags.dc20rpg.pactArmorId);\n  if (oldArmor) {\n    let macroToUpdate =  oldArmor.system.macros.onItemToggle;\n    macroToUpdate = macroToUpdate.replace(code, \"\");\n    oldArmor.update({[\"system.macros.onItemToggle\"]: macroToUpdate});\n  }\n\n  // Add macro to new Pact Armor\n  const onItemToggle = armor.system.macros.onItemToggle;\n  armor.update({[\"system.macros.onItemToggle\"]: onItemToggle + code})\n  item.update({[\"flags.dc20rpg.pactArmorId\"]: armorId});\n}",
      "preDelete": "const code = `; const pact = actor.items.get(\"${item._id}\"); if (pact) {pact.update({['system.toggle.toggledOn']: on})}`;\n// Remove macro from old Pact Armor\nconst oldArmor = actor.items.get(item.flags.dc20rpg.pactArmorId);\nif (oldArmor) {\n  let macroToUpdate =  oldArmor.system.macros.onItemToggle;\n  macroToUpdate = macroToUpdate.replace(code, \"\");\n  oldArmor.update({[\"system.macros.onItemToggle\"]: macroToUpdate});\n}",
